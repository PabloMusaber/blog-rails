<h2>Editar usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-2">
            <strong><%= f.label :Nombre%></strong><br />
            <%= f.text_field :first_name%>
        </div>

        <div class="field mb-2">
            <strong><%= f.label :Apellido%></strong><br />
            <%= f.text_field :last_name%>
        </div>

        <div class="field mb-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb-2">
            <strong><%= f.label :avatar%></strong><br />
            <%= f.file_field :avatar%>
        </div>
        <% if current_user.avatar.attached? %>
          <%= image_tag url_for(current_user.avatar), height:200, class: "img-editar-perfil mb-2" %>
        <% end %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-2">
    <strong><%= f.label :Contraseña %></strong> <i>(Deja este campo en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres como mínimo</em>
    <% end %>
  </div>

  <div class="field mb-2">
    <strong><%= f.label :Repetir_contraseña %></strong><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field my-3">
    <strong><%= f.label :Contraseña_actual %></strong> <i>(Necesaria para confirmar cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
  </div>
<% end %>

<h3 class="mt-4">Cancelar cuenta</h3>

<div>¿No estás contento? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), class: "btn btn-danger my-2", data: { confirm: "¿Estás seguro?", turbo_confirm: "¿Estás seguro?" }, method: :delete %></div>

<%= link_to 'Volver', articles_path, class: "btn btn-secondary" %>

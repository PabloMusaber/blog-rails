<h1><%=@article.title%></h1>
<div>
        <% @article.categories.each do |category| %>
            <span class="badge badge-pill padding" style="background-color:<%= category.color %>">
                <%= link_to category.title, category, class:"text-white"%>
            </span>
        <% end %>
</div>
<div class="mt-3">
    <p>Escrito por <strong><%=@article.user.first_name%> <%=@article.user.last_name%></strong>
    <%= image_tag url_for(@article.user.avatar), class: "cointaner-foto-detail"%>
    </p>
</div>
<div class="mb-4">
    <%=@article.content%>
</div>

<h4>Comentarios</h4>
<%= render @comments %>

<div class="mt-4">
<% if  user_signed_in? && @article.user.email === current_user.email%>
    <%= link_to "Editar artículo", edit_article_path(@article), class: "btn btn-success" %> |
    <%=link_to "Eliminar el artículo", @article, method: :delete, class: "btn btn-danger"%> |
<% end %>
<%= link_to 'Volver', articles_path, class: "btn btn-secondary" %>

</div>